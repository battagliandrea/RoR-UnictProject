<% if user_signed_in? %>
    <% if current_user.admin==1 %>
        <ol class="breadcrumb">
          <li><%= link_to "Home", root_path %></li>
          <li class="active">Amministrazione</li>
        </ol>
        <h2 align="center">Amministrazione</h2>
        <div class="row">
          <div class="col-md-8">
            <p class="lead">Benvenuto nel pannello di Amministrazione di Europasport<br>
              Qui puoi gestire gli ordini i prodotti e gli utenti
            </p>

            <div class="container">
              <p class="lead">
                Statistiche shop
              </p>

              <p>

              <ul class="nav nav-pills" role="tablist">
                <li role="presentation"><a href="#">Ordini <span class="badge"><%= @ordersNum %></span></a></li>
