            </div>

          </div>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <ul class="list-group">
                  <li class="list-group-item btn-default"><%= link_to "Prodotti", admin_products_path %></li>
                  <li class="list-group-item btn-default"><%= link_to "Utenti", admin_users_path %></li>
                  <li class="list-group-item btn-default"><%= link_to "Ordini", admin_orders_path %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>

    <% else %>
        <script type="text/javascript">
            window.location.href = "../errors/404"  // put your correct path in a string here
