<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="jumbotron">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="row">
            <div class="col-sm-12">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, :class => "form-control"%>



              <style>
                  #danger{
                      color: #CC0000 ;
                  }
              </style>

              <h5 id="danger"><%= devise_error_messages! %></h5>
              <div class="row">
                <div class="col-sm-3">

                </div>
                <div class="col-sm-6">
                  <%= f.submit "Invia istruzioni per resettare password", :class => "btn btn-warning btn-sm" %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
</div>








