<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="jumbotron">

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

          <div class="row">
            <div class="col-sm-12">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true,:class => "form-control" %>
              <br>
            </div>
              <style>
                  #danger{
                      color: #CC0000 ;
                  }
              </style>

              <h5 id="danger"><%= devise_error_messages! %></h5>
              <div class="row">
                <div class="col-sm-7"></div>
                <div class="col-sm-5">
                  <%= f.submit "Reinvia email di conferma", :class => "btn btn-danger btn-sm" %>

              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
</div>









