
<div class="row">

  <div class="col-sm-8">
    <br>
    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
            <% if provider.to_s.titleize == 'Facebook'%>
                <%= link_to "<i class='fa fa-facebook'></i>  Sign in with #{provider.to_s.titleize}".html_safe, omniauth_authorize_path(resource_name, provider) , class: "btn btn-default btn-facebook" %><br />
            <%else%>
                <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) , class: "btn btn-default" %><br />
            <% end %>
        <% end -%>
    <% end -%>
    <div class="col-sm-4" align="left"></div>
  </div>
</div>

<br>
<br>
<div align="right">
<h6>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Password dimenticata?", new_password_path(resource_name)%><br/>
<% end -%>
</h6>
<h6>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Non hai ricevuto l'email di conferma?", new_confirmation_path(resource_name) %><br />
<% end -%>
</h6>
<h6>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Non hai ricevuto le istruzione per lo sblocco", new_unlock_path(resource_name) %><br />
<% end -%>
</h6>
</div>
