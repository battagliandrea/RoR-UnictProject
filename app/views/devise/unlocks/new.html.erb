<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="jumbotron">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

          <div class="row">
            <div class="col-sm-12">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, :class => "form-control" %></div>
              <br>

              <style>
                  #danger{
                      color: #CC0000 ;
                  }
              </style>

              <h5 id="danger"><%= devise_error_messages! %></h5>
              <div class="row">
                <div class="col-sm-10">
                </div>
                <div class="col-sm-2">
                  <div><%= f.submit "Invia Istruzioni di sblocco" , class: "btn btn-warning btn-sm"%></div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
</div>


