<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<% @line_items.each do |line_item|%>
    <td><%= line_item.quantity %> &times;</td>
    <td><%= line_item.product.title %></td>
<% end %>
<%= link_to 'Back', orders_path %>
